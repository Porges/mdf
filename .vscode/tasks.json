{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "llvm-cov",
			"args": [
				"nextest",
				"--lcov",
				"--output-path",
				"${workspaceFolder}\\lcov.info"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"label": "rust: cargo test with coverage"
		},
		{
            "label": "Watch coverage on open",
            "command": "${command:coverage-gutters.watchCoverageAndVisibleEditors}",
            "runOptions": {
                "runOn": "folderOpen"
            }
		}
	]
}
